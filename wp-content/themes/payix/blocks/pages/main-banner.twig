<{{page_block.without_section ? 'div ' : 'section '}}class="main-banner">
  {% if page_block.animations %}
    <div class="svg-animations">
      {% for item in page_block.animations %}
        {% set style = ' style="' ~ 'height:' ~ item.height ~ 'px;width:' ~ item.width ~ 'px;left:' ~ (item.left == 0 ? 'auto' : item.left ~ '%') ~ ';right:' ~ (item.right == 0 ? 'auto' : item.right ~ '%')  ~ ';top:' ~ (item.top == 0 ? 'auto' : item.top ~ '%') ~ ';bottom:' ~ (item.bottom == 0 ? 'auto' : item.bottom ~ '%') ~ ';"' %}
        <div class="svg-animations__item"{{style}}>
          {% filter shortcodes %}
            {{item.animation_shortcode}}
          {% endfilter %}
        </div>
      {% endfor %}
    </div>
  {% endif %}
  <div class="main-banner__wave-wrapper">
    <svg role="img" class="main-banner__wave" width="100%" height="150px" fill="none" aria-labelledby="main-banner-wave-title">
      <title id="main-banner-wave-title">Main banner animation wave</title>
      <path fill="white" d="M 0 32.8155 C 247.381 66.2677 378.243 49.3745 631.144 19.46 C 829.829 -2.93073 1124.83 24.6902 1370.32 34.6818 C 1919.95 62.6049 2063.14 38.2373 2560 32.8156 V 178.817 L 0 178.817 V 32.8155 Z">
        <animate repeatCount="indefinite" fill="freeze" attributeName="d" dur="28s" values="
          M0 25.9086C277 84.5821 433 65.736 720 25.9086C934.818 -3.9019 1214.06 -5.23669 1442 8.06597C2079 45.2421 2208 63.5007 2560 25.9088V171.91L0 171.91V25.9086Z;
          M0 86.3149C316 86.315 444 159.155 884 51.1554C1324 -56.8446 1320.29 34.1214 1538 70.4063C1814 116.407 2156 188.408 2560 86.315V232.317L0 232.316V86.3149Z;
          M0 25.9086C277 84.5821 433 65.736 720 25.9086C934.818 -3.9019 1214.06 -5.23669 1442 8.06597C2079 45.2421 2208 63.5007 2560 25.9088V171.91L0 171.91V25.9086Z;
